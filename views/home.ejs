<body>
<section id="services" class="services section-bg">
    <div class="container">
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">To Do List</h1>
          <h3 style="margin-top:50px;">Welcome <%= data.username %>!</h3>
        </div>
      </div>
      <div class="row">
        <center>
          <button type="button" class="btn btn-primary" ><a href="/add" style="color:white !important;">Add Task</a></button>
        </center> <br><br>
        <% for(i=0;i < tasks.length ; i++) { %>
          <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">Task Number</th>
                <th scope="col">Task</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Completed at</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row"><%= i+1 %></th>
                <td><%= tasks[i].task %></td>
                <td><%= tasks[i].description %></td>
                <td>
                    <%if(tasks[i].status =='pending'){ %>
                      Not yet completed
                    <% } else{ %>
                      Completed
                    <% } %>
                </td>
                <td> <%if(tasks[i].status == 'pending'){%>
                    <button type="button" class="btn btn-success"><a href="/update?id=<%= tasks[i].id %>&user=<%= data.uuid %>" style="color:white;">Click to Complete</button>
                    </a>
                    <% } else{ %>
                      <%= tasks[i].updatedAt.toLocaleString().replace(/T/, ' ').replace(/\..+/, ''); %>
                    <% } %>
                <td>
                    <button type="button" class="btn btn-danger"><a href="/delete?id=<%= tasks[i].id %>&user=<%= data.uuid %>" style="color: white;">Click to Delete</button>
                    </a>
                </td>
              </tr>
            </tbody>
          </table>
        <% } %>
      </div>
  </div>
</section>
